<div class="row">
  <div class="leftcolumn">
    <div class="card">
      <h2 id="blog-title">{{blog.title}}</h2>
      <h5>Posted by:{{blog.user.name}}</h5>
      <h6>Created on: {{blog.created_date}}</h6>
      <div class="row">
        <form class="blog-form card" id="{{blog.id}}">
          <div class="form-group">
            <label for="blog-body">Amend or delete your post:</label>
            <textarea class="form-input" id="blog-body" name="blog-body">{{blog.body}}</textarea>
          </div>
          <div class="form-group">
            <button type="submit" name="update" class="btn btn-primary update-button" id="{{blog.id}}">Update</button>
            <button type="submit" name="delete" class="btn btn-primary delete-button" id="{{blog.id}}">Delete</button>
          </div>
        </form>
      </div>
      {{#each blog.comments as |comment| }}
      <div class="row">
        <div class="leftcolumn">
          <div class="card">
            <h5>{{comment.user.name}}</h5>
            <p>{{comment.comment}}</p>
          </div>
        </div>
      </div>
      {{/each}}
      <div class="row">
        <form class="comment-form card" id="{{blog.id}}">
          <div class="form-group">
            <label for="blog-comment">Add a comment:</label>
            <textarea class="form-input" id="blog-comment" name="blog-comment"></textarea>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary add-button" id="{{blog.id}}">Add Comment</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/js/comment.js"></script>