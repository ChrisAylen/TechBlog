<div class="row">
  <div class="leftcolumn">
    <div class="card">
      <h2>{{blog.title}}</h2>
      <h5>Posted by:{{blog.user.name}}</h5>
      <h6>Created on: {{blog.created_date}}</h6>
      <p>{{blog.body}}</p>
      {{#each blog.comments as |comment| }}
      <div class="row">
        <div class="leftcolumn">
          <div class="card">
            <p>{{comment.comment}}</p>
          </div>
        </div>
      </div>
      {{/each}}
  <div class="row">
    <form class="comment-form card" id="{{blog.id}}">
      <div class="form-group">
        <label for="blog-comment">Add a comment:</label>
        <textarea class="form-input" id="blog-comment" name="blog-comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary add-button" id="{{blog.id}}">Add Comment</button>
      </div>
    </form>
  </div>
    </div>
  </div>
</div>
<script src="/js/script.js"></script>